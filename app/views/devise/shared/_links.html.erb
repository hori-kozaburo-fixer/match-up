<%- if controller_name != 'sessions' %>
  <div class="linkToLogin"><%= link_to "ログインへ", new_session_path(resource_name) %></div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="link">
  <div class="linkToLogin"><%= link_to "アカウント作成", new_registration_path(resource_name) %></div>
  <div class="linkToLogin"><%= link_to "FaceBookで登録", user_facebook_omniauth_authorize_path, method: :post %></div>
  <div class="linkToLogin"><%= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post %></div>
</div>
<% end %>

