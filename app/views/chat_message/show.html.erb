<div class="chatPage">
  <header class="header">
  <%= link_to "", matching_index_path, class: "linkToMatching" %>
    <div class="chatPartner">
      <div class="chatPartner_img"><%= image_tag "#{@chat_room_user.img_name}" %></div>
      <div class="chatPartner_name"><%= @chat_room_user.nickname %></div>
    </div>
  </header>

  <div class="container">
    <div class="messagesArea messages">
      <%= render @chat_messages %>
    </div>
  </div>

  <%= form_with model:@chat_message, url: chat_message_index_path, class:"messageInputForm" do |f| %>
    <div class='container'>
      <%= f.text_field :message, class:"messageInputForm_input", placeholder:"メッセージを入力..."%>
    </div>
  <% end %>

</div>
