<div class="conversation">
<%= render 'shared/header'%>    
  <div class="container">
    <div class="row conversation_search">
      <h5 class="col conversation_search_text">チーム毎のニュースを確認できます</h5>
      <%= form_with(url: search_tweets_path, local: true, method: :get, class: "form-inline conversation_search_search") do |f| %>
        <%= f.text_field :keyword, placeholder: 'ニュースを検索', class: "form-control" %>
        <%= f.submit "検索", class:"btn btn-outline-warning" %>
      <% end %>
    </div>
    
    <div class="row conversation_teams">
      <% @teams.each do |team| %>
        <div class="col-xs-4 conversation_teams_each"> 
          <%= link_to tweet_path(team.id) do %>
          <%= image_tag "#{team.image}", class:"img-fluid", size:"159x159" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<%= render 'shared/footer'%>
</div>